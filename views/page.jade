doctype html
html
  head
    title= title
    link(rel='stylesheet', href=req.baseUrl + '/css/reveal.css')
    link(rel='stylesheet', href=req.baseUrl + '/css/theme/' + (theme || 'black') + '.css')#theme
    link(rel='stylesheet', href=req.baseUrl + '/lib/css/zenburn.css')
  body
    .reveal
      .slides
        each section in sections
          unless section.sections
            section!=section
          else
            section
              each subSection in section.sections
                section!=subSection

    script(src=req.baseUrl + '/lib/js/head.min.js')
    script(src=req.baseUrl + '/js/reveal.js')
    script.
      // https://github.com/hakimel/reveal.js#configuration
      Reveal.initialize({
        controls: true,
        progress: true,
        history: true,
        center: true,

        transition: '#{transition || "slide"}', // none/fade/slide/convex/concave/zoom

        // Optional reveal.js plugins
        dependencies: [
         { src: '#{req.baseUrl}/lib/js/classList.js', condition: function() { return !document.body.classList; } },
         { src: '#{req.baseUrl}/plugin/markdown/marked.js', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
         { src: '#{req.baseUrl}/plugin/markdown/markdown.js', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
         { src: '#{req.baseUrl}/plugin/highlight/highlight.js', async: true, callback: function() { hljs.initHighlightingOnLoad(); } },
         { src: '#{req.baseUrl}/plugin/zoom-js/zoom.js', async: true },
         { src: '#{req.baseUrl}/plugin/notes/notes.js', async: true }
        ]
      });
